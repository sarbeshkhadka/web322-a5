<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects - Climate Solutions</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 font-sans">

    <!-- Navbar -->
    <%- include('partials/navbar', { page: 'projects' }) %>

    <div class="container mx-auto p-6">
        <!-- Page Title -->
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Climate Solutions Projects</h1>

        <!-- Projects List -->
        <ul id="projects-list" class="space-y-6">
            <% projects.forEach(project => { %>
                <li class="project bg-white p-6 rounded-lg shadow-md hover:bg-gray-100 transition duration-300" data-sector="<%= project.Sector.sector_name %>">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        <!-- Title Column -->
                        <div class="col-span-1">
                            <a href="/solutions/projects/<%= project.id %>" class="text-xl font-semibold text-blue-500 hover:underline">
                                <%= project.title %>
                            </a>
                        </div>

                        <!-- Summary Column -->
                        <div class="col-span-1">
                            <p class="text-gray-600 mt-2 mb-4"><%= project.summary_short %></p>
                        </div>

                        <!-- Sector Column -->
                        <div class="col-span-1">
                            <span class="text-gray-600"> - <%= project.Sector.sector_name %></span>
                        </div>

                        <!-- Details Button Column -->
                        <div class="col-span-1 mt-4 flex items-center justify-center">
                            <a href="/solutions/projects/<%= project.id %>" class="inline-block bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600 transition duration-300">View Details</a>
                        </div>
                    </div>
                </li>
            <% }); %>
        </ul>

    </div>

    <script>
        // Function to filter projects based on selected sector
        function filterBySector(sector) {
            // Get all project items
            const projects = document.querySelectorAll('.project');
            
            // Loop through each project and toggle visibility based on the selected sector
            projects.forEach(project => {
                const projectSector = project.getAttribute('data-sector');
                
                if (sector === "All" || projectSector === sector) {
                    project.style.display = 'block'; // Show project
                } else {
                    project.style.display = 'none'; // Hide project
                }
            });
        }
    </script>

</body>
</html>
