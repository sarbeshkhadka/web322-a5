<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Project - <%= project.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-50 font-sans">
  <%- include('partials/navbar', { page: 'projects', user: user }) %>
  <div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Edit Project: <%= project.title %></h1>
    <!-- Edit Project Form -->
    <form action="/solutions/projects/<%= project.id %>/edit" method="POST" enctype="multipart/form-data" class="max-w-2xl mx-auto space-y-6">
      <!-- Title -->
      <div>
        <label for="title" class="block text-lg font-medium text-gray-700 mb-1">Title</label>
        <input type="text" id="title" name="title" value="<%= project.title %>" class="w-full input input-bordered" required>
      </div>
      <!-- Feature Image URL or Upload -->
      <div>
        <label for="feature_img_url" class="block text-lg font-medium text-gray-700 mb-1">Feature Image URL</label>
        <input type="url" id="feature_img_url" name="feature_img_url" value="<%= project.feature_img_url %>" class="w-full input input-bordered">
        <p class="text-gray-500 text-sm mt-1">OR upload a new image to replace:</p>
        <input type="file" id="feature_img_file" name="feature_img_file" accept="image/*" class="file-input file-input-bordered w-full mt-1">
      </div>
      <!-- Sector Selection -->
      <div>
        <label for="sector_id" class="block text-lg font-medium text-gray-700 mb-1">Sector</label>
        <select id="sector_id" name="sector_id" class="w-full select select-bordered">
          <% sectors.forEach(sector => { %>
            <option value="<%= sector.id %>" <%= (project.sector_id === sector.id) ? 'selected' : '' %>><%= sector.sector_name %></option>
          <% }); %>
        </select>
      </div>
      <!-- Short Introduction -->
      <div>
        <label for="intro_short" class="block text-lg font-medium text-gray-700 mb-1">Short Introduction</label>
        <textarea id="intro_short" name="intro_short" class="w-full textarea textarea-bordered" rows="3" required><%= project.intro_short %></textarea>
      </div>
      <!-- Short Summary -->
      <div>
        <label for="summary_short" class="block text-lg font-medium text-gray-700 mb-1">Short Summary</label>
        <textarea id="summary_short" name="summary_short" class="w-full textarea textarea-bordered" rows="2" required><%= project.summary_short %></textarea>
      </div>
      <!-- Impact -->
      <div>
        <label for="impact" class="block text-lg font-medium text-gray-700 mb-1">Impact</label>
        <textarea id="impact" name="impact" class="w-full textarea textarea-bordered" rows="3" required><%= project.impact %></textarea>
      </div>
      <!-- Original Source URL -->
      <div>
        <label for="original_source_url" class="block text-lg font-medium text-gray-700 mb-1">Original Source URL</label>
        <input type="url" id="original_source_url" name="original_source_url" value="<%= project.original_source_url %>" class="w-full input input-bordered" required>
      </div>
      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Update Project</button>
      </div>
    </form>
  </div>
</body>
</html>
